generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model OrderData {
  id        Int      @id @default(autoincrement())
  orderId   String
  orderTime String
  productId String
  variantId String
  price     Float
  quantity  Int
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model ProductSales {
  id        Int      @id @default(autoincrement())
  productId String   @unique
  title     String
  sales     Json
  price     Float
  revenue   Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model VariantSalesInfo {
  id                Int      @id @default(autoincrement())
  productId         String
  variantId         String   @unique
  title             String
  price             Float
  options           Json
  inventoryQuantity Int
  sales             Json
  revenue           Json
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
}
