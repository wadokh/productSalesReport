generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProductSales {
  id                 Int      @id @default(autoincrement())
  productId          String   @unique
  minprice           Float
  maxprice           Float
  salesIn30Days      Int
  salesIn45Days      Int
  salesIn90Days      Int
  minrevenueIn30Days Float
  minrevenueIn45Days Float
  minrevenueIn90Days Float
  maxrevenueIn30Days Float
  maxrevenueIn45Days Float
  maxrevenueIn90Days Float
  updatedAt          DateTime @updatedAt
}

model VariantSalesInfo {
  id                Int      @id @default(autoincrement())
  productId         String
  variantId         String   @unique
  variantName       String
  price             Float
  options           Json
  inventoryQuantity Int
  salesIn30Days     Int
  salesIn45Days     Int
  salesIn90Days     Int
  revenueIn30Days   Float
  revenueIn45Days   Float
  revenueIn90Days   Float
  updatedAt         DateTime @updatedAt
}
